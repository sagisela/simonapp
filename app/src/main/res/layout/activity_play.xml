        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/TileB4P"
        app:layout_constraintEnd_toEndOf="@+id/TileW7P"
        app:layout_constraintStart_toEndOf="@+id/TileW5P"
        app:layout_constraintTop_toTopOf="@+id/TileW6P" />

    <TextView
        android:id="@+id/tvWatch"
        android:layout_width="411dp"
        android:layout_height="53dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center_horizontal"
        android:text="WATCH!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRepeat"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center_horizontal"
        android:text="REPEAT!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>