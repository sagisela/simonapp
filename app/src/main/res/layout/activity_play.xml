        app:layout_constraintTop_toTopOf="@+id/TileW4P" />

    <ImageView
        android:id="@+id/TileB4P"
        android:layout_width="40dp"
        android:layout_height="190dp"
        android:src="@drawable/black_tile_border"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/TileB3P"
        app:layout_constraintEnd_toEndOf="@+id/TileW6P"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/TileW4P"
        app:layout_constraintTop_toTopOf="@+id/TileW5P"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/TileB5P"
        android:layout_width="40dp"
        android:layout_height="190dp"
